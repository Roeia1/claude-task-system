{
  "name": "@saga-ai/utils",
  "version": "0.0.0",
  "private": true,
  "description": "Shared schemas, storage utilities, and plugin scripts for SAGA",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./schemas": "./src/schemas/index.ts",
    "./storage": "./src/storage.ts",
    "./directory": "./src/directory.ts",
    "./conversion": "./src/conversion.ts"
  },
  "scripts": {
    "prebuild": "biome check .",
    "build": "node esbuild.config.mjs",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.39",
    "fuse.js": "^7.1.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  }
}
