  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.39",
    "@saga-ai/types": "workspace:*",
    "fuse.js": "^7.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  }
}
