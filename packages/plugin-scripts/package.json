{
  "name": "@saga-ai/plugin-scripts",
  "version": "0.0.0",
  "private": true,
  "description": "TypeScript source for SAGA plugin scripts compiled to plugin/scripts/",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "node esbuild.config.mjs",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@saga-ai/types": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  }
}
