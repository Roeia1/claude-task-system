{
  "name": "@saga-ai/cli",
  "version": "2.14.0",
  "packageManager": "pnpm@9.15.0",
  "description": "CLI for SAGA - Structured Autonomous Goal Achievement",
  "type": "module",
  "bin": {
    "saga": "./dist/cli.cjs"
  },
  "main": "./dist/cli.cjs",
  "scripts": {
    "build:cli": "esbuild src/cli.ts --bundle --platform=node --outfile=dist/cli.cjs --format=cjs --banner:js='#!/usr/bin/env node' --external:express --external:ws --external:chokidar --external:gray-matter --external:fuse.js --external:commander",
    "build:client": "vite build --config src/client/vite.config.ts",
    "build": "concurrently -g \"pnpm build:cli\" \"pnpm build:client\"",
    "test": "pnpm build && concurrently -g \"vitest run\" \"pnpm run test:integration\" \"pnpm run test:e2e\"",
    "test:watch": "vitest",
    "test:integration": "playwright test --config src/client/playwright.config.ts",
    "test:integration:ui": "playwright test --config src/client/playwright.config.ts --ui",
    "test:e2e": "playwright test --config src/client/playwright.e2e.config.ts",
    "test:e2e:ui": "playwright test --config src/client/playwright.e2e.config.ts --ui",
    "test-storybook": "vitest --project=storybook",
    "test:storybook": "vitest run --project=storybook",
    "test:storybook:update": "vitest run --project=storybook --update",
    "publish:npm": "pnpm build && pnpm test && pnpm publish --access public",
    "storybook": "storybook dev -p 6006 -c src/client/.storybook",
    "build-storybook": "storybook build -c src/client/.storybook -o storybook-static",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write ."
  },
  "keywords": [
    "claude",
    "saga",
    "cli",
    "workflow",
    "automation"
  ],
  "author": "Roei Avrahami <roei.avrahami2@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Roeia1/saga.git",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/Roeia1/saga#readme",
  "dependencies": {
    "chokidar": "^5.0.0",
    "commander": "^14.0.2",
    "express": "^5.2.1",
    "fuse.js": "^7.1.0",
    "gray-matter": "^4.0.3",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^5.0.0",
    "@playwright/test": "^1.58.0",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@storybook/addon-a11y": "^10.2.1",
    "@storybook/addon-docs": "^10.2.1",
    "@storybook/addon-onboarding": "^10.2.1",
    "@storybook/addon-vitest": "^10.2.1",
    "@storybook/react-vite": "^10.2.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-virtual": "^3.13.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/express": "^5.0.6",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/browser": "^4.0.18",
    "@vitest/browser-playwright": "^4.0.18",
    "@xstate/react": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.2",
    "jsdom": "^27.4.0",
    "lucide-react": "^0.563.0",
    "playwright": "^1.58.0",
    "postcss": "^8.5.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-markdown": "^10.1.0",
    "react-router": "^7.13.0",
    "remark-gfm": "^4.0.1",
    "storybook": "^10.2.1",
    "supertest": "^7.2.2",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.7.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "xstate": "^5.26.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "README.md"
  ]
}
